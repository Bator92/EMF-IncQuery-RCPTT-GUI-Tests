get-view "IncQuery Viewers Sandbox" | get-tab-folder | get-tab-item List | click
get-view "IncQuery Viewers Sandbox" | get-list | get-property "getItems().length" | equals 6 | verify-true

with [get-view "IncQuery Viewers Sandbox"] {
    get-tab-folder | get-tab-item Settings | click
    with [get-group "Activated queries" | get-tree] {
        select "Item : org.eclipse.incquery.tooling.ui.retevis.aggregatorIndexerRecipe" 
            | get-item "Item : uml.emptyclass.emptyClass" | uncheck
        get-item "Edge : org.eclipse.incquery.tooling.ui.retevis.aggregatorRecipeParent" | uncheck
        get-item "Edge : org.eclipse.incquery.tooling.ui.retevis.betaRecipeLeftParent" | uncheck
        get-item "Edge : org.eclipse.incquery.tooling.ui.retevis.betaRecipeRightParent" | uncheck
        get-item "Edge : org.eclipse.incquery.tooling.ui.retevis.multiParentNodeRecipeParents" | uncheck
        get-item "Edge : org.eclipse.incquery.tooling.ui.retevis.singleParentNodeRecipeParent" | uncheck
        get-item "Edge : uml.emptyclass.transitiveSuperClass" | uncheck
    }
    get-button Apply | click
    get-tab-folder | get-tab-item List | click
}
get-view "IncQuery Viewers Sandbox" | get-list | get-property "getItems().length" | equals 3 | verify-true
get-view "IncQuery Viewers Sandbox" | get-tab-folder | get-tab-item Tree | click
get-view "IncQuery Viewers Sandbox" | get-tree | get-property itemCount | equals 3 | verify-true
get-view "IncQuery Viewers Sandbox" | get-tab-folder | get-tab-item "Zest Graph" | click
get-view "IncQuery Viewers Sandbox" | get-canvas | get-property className 
    | equals "org.eclipse.gef4.zest.core.widgets.GraphWidget" | verify-true
